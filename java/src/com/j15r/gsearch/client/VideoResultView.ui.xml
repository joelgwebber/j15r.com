<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .thumb {
    border:1px solid;
    width: 122;
    height: 100;
  }

  .content {
    font-family: arial, sans-serif;
    size:-1;
  }

  .publisher {
    color: #008000;
  }
  </ui:style>

  <center>
    <div ui:field='display'>
      <a ui:field='anchor'>
        <img class='{style.thumb}' ui:field='thumb'/>
      </a>
      <br/>
      <span ui:field='content' class='{style.content}'/>
      <br/>
      <span ui:field='publisher' class='{style.publisher}'/>
    </div>

    <div ui:field='loading'><b> . . . </b></div>
  </center>
</ui:UiBinder>
