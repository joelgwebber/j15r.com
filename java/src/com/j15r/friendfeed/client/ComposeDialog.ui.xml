<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
	.dialog {
	  position: relative;
	  background-color: #eee;
	  padding: 8px;
	}
	
	.messageBox {
	  width: 300px;
	  height: 4em;
	}
	
	.linkBox, .commentBox {
	  padding-left: 20px;
	  width: 280px;
	  height: 1.5em;
	  margin-bottom: 8px;
	}
	
	.linkBox {
	  background: url(world-link.png) no-repeat center left;
	}
	
	.commentBox {
	  background: url(share-comment.png) no-repeat center left;
	}
	
	.buttonBox {
	  height: 1.5em;
	}
	
	.linkAnchor {
	  background: url(world-link.png) no-repeat center left;
	  padding-left: 20px;
	}
	
	.commentAnchor {
	  background: url(share-comment.png) no-repeat center left;
	  padding-left: 20px;
	}
	
	.closeAnchor {
	  float: right;
	  width: 24px;
	  height: 24px;
	}
	
	.postButton {
	  float: right;
	}
  </ui:style>

	<div class='{style.dialog}'>
		<div><a href='#' ui:field='closeAnchor' class='{style.closeAnchor}'>
		  <img width='13' height='13' src='share-close.png'/>
		</a></div>
		<textarea ui:field='messageBox' class='{style.messageBox}'></textarea>
		<div><input type='text' ui:field='linkBox' class='{style.linkBox}' style='display:none' value='http://'></input></div>
		<div><input type='text' ui:field='commentBox' class='{style.commentBox}' style='display:none'></input></div>
		<div class='{style.buttonBox}'>
		  <a ui:field='linkAnchor' class='{style.linkAnchor}' href='#'>Link</a>
		  <a ui:field='commentAnchor' class='{style.commentAnchor}' href='#'>Comment</a>
		  <button ui:field='postButton' class='{style.postButton}'>Post</button>
		</div>
  </div>
</ui:UiBinder>
