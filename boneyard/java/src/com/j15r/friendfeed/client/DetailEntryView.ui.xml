<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .view {
	  margin-top: 4px;
	  padding-top: 8px;
	  padding-left: 8px;
	  padding-right: 8px;
	}
	
	.comment, .like {
	  float: right;
	  padding: 4px;
	  margin: 4px;
	  height: 16px;
	}
	
	.service {
	  margin-bottom: 4px;
	}
	
	.title {
	  margin-bottom: 4px;
	  color: black;
	}
	
	.details {
	  margin-bottom: 4px;
	}
	
	.likes {
	  margin-bottom: 4px;
	}
	
	.userAnchor, .userAnchor:hover,
	.serviceAnchor, .serviceAnchor:hover {
	  color: #000;
	  font-weight: bold;
	}
	
	.userAnchor:hover, .serviceAnchor:hover {
	  text-decoration: underline;
	}
	
	.likes {
	  background: url(smile.png) no-repeat top left;
	  margin-left: 12px;
	  padding-left: 19px;
	}
	
	.comments {
	}
  </ui:style>

  <div class='{style.view}'>
    <div ui:field='serviceElem' class='{style.service}'>
      <img ui:field='serviceIconElem'/>
      <a target='_blank' ui:field='userAnchorElem' class='{style.userAnchor}'/>
      -
      <a target='_blank' ui:field='serviceAnchorElem' class='{style.serviceAnchor}'/>
    </div>
    <div ui:field='titleElem' class='{style.title}'/>
    <div ui:field='detailsElem' class='{style.details}'>
      <span ui:field='whenElem'/>
    </div>
    <div ui:field='likesElem' class='{style.likes}'/>
    <div ui:field='commentsElem' class='{style.comments}'/>
    <div ui:field='bottomElem'/>
  </div>
</ui:UiBinder>
