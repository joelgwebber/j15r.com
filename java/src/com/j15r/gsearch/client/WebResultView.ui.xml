<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .resultView {
    font-size: small;
    font-family: arial, sans-serif;
  }

  .resultContent {
    width: 42em;
  }

  .title {
    font-size: medium;
    font-weight: normal;
    padding: 0;
    margin: 0;
  }

  .visibleUrl {
    color:green;
    font-style:normal;
  }
  </ui:style>

  <div class='{style.resultView}'>
    <div ui:field='display'>
  	  <h3 class='{style.title}'><a ui:field='anchor'></a></h3>
  	  <div ui:field='content' class='{style.resultContent}'/>
      <cite class='{style.visibleUrl}' ui:field='visibleUrl'/> - <span><a ui:field='cached'>Cached</a></span>
    </div>

    <div ui:field='loading'>
      <center><b> . . . </b></center>
    </div>
	</div>
</ui:UiBinder>
